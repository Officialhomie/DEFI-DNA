# ===========================================
# DeFi DNA Backend - Development Environment
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Blockchain Configuration
# Get RPC URL from: https://www.alchemy.com/ or https://infura.io/
RPC_URL_BASE=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# OR for mainnet:
# RPC_URL_BASE=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Smart Contract Addresses (Base Mainnet Uniswap V4)
DNA_SUBSCRIBER_ADDRESS=0x0000000000000000000000000000000000000000
DNA_READER_ADDRESS=0x0000000000000000000000000000000000000000
# Uniswap V4 PositionManager on Base Mainnet
POSITION_MANAGER_ADDRESS=0xbD216513d74C8cf14cf4747E6AaA6420FF64ee9e
ADVANCED_POSITION_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000

# Database Configuration (Optional)
# Option A: DATABASE_URL (Railway, Supabase - recommended)
# DATABASE_URL=postgresql://user:password@host:5432/database
# Option B: Individual vars
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=defidna
# DB_USER=defidna_user
# DB_PASSWORD=your_password
# After provisioning DB, run: npm run migrate

# External API Keys (Optional)
# COINGECKO_API_KEY=your_coingecko_api_key
# GRAPH_API_KEY=your_graph_api_key
# SENTRY_DSN=https://...@sentry.io/...  (error tracking)
